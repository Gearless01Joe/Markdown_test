{
  "description": "字段过滤配置文件 - 定义需要提取的字段",
  "mode": "whitelist",
  "comment": "whitelist: 只提取指定的字段（未指定的不提取）; blacklist: 排除指定的字段（其他都提取）",
  
  "CoreEntry": {
    "include_all": true,
    "comment": "include_all: true 表示提取所有字段; false 表示只提取 include_fields 中指定的字段",
    "include_fields": [],
    "exclude_fields": [],
    "comment_exclude": "exclude_fields: 即使 include_all=true，也会排除这些字段",
    "field_rules": {
      "properties.audit_author": {
        "include_all": true,
        "exclude_subfields": []
      },
      "properties.citation": {
        "include_all": false,
        "include_subfields": ["id", "title", "year", "pdbx_database_id_PubMed"]
      }
    }
  },
  
  "CorePolymerEntity": {
    "include_all": true,
    "include_fields": [],
    "exclude_fields": [],
    "field_rules": {
      "rcsb_polymer_entity_feature": {
        "include_all": false,
        "include_subfields": ["feature_type", "description"],
        "exclude_subfields": ["feature_positions"]
      }
    }
  },
  
  "CoreNonpolymerEntity": {
    "include_all": false,
    "include_fields": [
      "rcsb_nonpolymer_entity_container_identifier",
      "chem_comp",
      "pdbx_nonpoly_scheme"
    ],
    "exclude_fields": [],
    "field_rules": {
      "rcsb_binding_affinity": {
        "include_all": false,
        "include_subfields": ["comp_id", "type", "value"]
      }
    }
  },
  
  "CoreBranchedEntity": {
    "include_all": true,
    "include_fields": [],
    "exclude_fields": ["rcsb_branched_linked_entity"]
  },
  
  "CoreChemComp": {
    "include_all": true,
    "include_fields": [],
    "exclude_fields": []
  },
  
  "CoreDrugbank": {
    "include_all": true,
    "include_fields": [],
    "exclude_fields": []
  }
}
